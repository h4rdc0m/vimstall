{
    "languageserver": {
        "intelephense": {
            "command": "intelephense",
            "args": ["--stdio"],
            "filetypes": ["php"],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        }
    },
    "html": {
        "filetypes": ["html", "handlebars", "htmldjango", "blade", "twig"]
    }    
}
